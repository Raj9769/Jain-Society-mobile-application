<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CollageProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyTheme.CollageProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/taskbar_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorSecondary">@color/toolbar_color</item>
        <item name="colorPrimaryVariant">@color/toolbar_color</item>
    </style>
    <!-- Button Style -->
    <style name="MyButton">
        <item name="android:backgroundTint">@color/toolbar_color</item>
        <item name="android:fontFamily">@font/work_sans_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Alert theme -->
    <style name="AlertTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/custom_view_radius</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyChipButton" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:checked">false</item>
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">14dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_chip_state_list</item>
        <item name="android:fontFamily">@font/work_sans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>